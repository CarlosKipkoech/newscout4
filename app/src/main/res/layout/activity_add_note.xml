<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_activity_background"
    android:layout_height="match_parent"
    tools:context=".ui.AddNote">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/titleTextView"
        android:text="Lets Create A Quick Note"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounde_corner"
        android:padding="10dp"
        android:layout_margin="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleInput"
            android:hint="Add a title"
            android:background="#B5B2B2"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BCBABA"
            android:id="@+id/descriptionInput"
            android:hint="Start typing ..."
            android:paddingBottom="150dp"
            android:paddingTop="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="top"/>


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_add_note"
        android:text="Add"
        android:textAllCaps="false"
        android:layout_gravity="center"
        app:backgroundTint="@color/gradBlack"/>



</LinearLayout>